/*==========================================
FEATURED-PRODUCT
============================================*/

.product-gallery--navigation {
  display: flex;
  height: 130px;
}

.product-gallery--media-thumbnail {
  width: 25%;
  margin-left: 0;
  margin-right: 0;
  padding-left: 5px;
  height: 100%;
  .slick-prev, .slick-next {
    top: 43%;
  }
}


.product-gallery--media-thumbnail img{
  //max-width: 100%;
  height: 100%;
  object-fit: cover;
}


.home-order-now .product-details h2 {
  font-size: 28px;
  font-weight: 600;
  margin-bottom: 15px;
}

.featured-product__description p {
  margin: 0;
  line-height: 140%;
}

.product__price-container {
  padding-top: 20px;
}

.product__price--old {
  text-transform: uppercase;
  position: relative;
  font-size: 1.4rem;
  margin-top: 6px;
  font-weight: 600;
}

.product__price--old:before {
  position: absolute;
  content: "";
  left: 0;
  top: 50%;
  right: 0;
  border-top: 2px solid ;
  border-color: #FCC0B4;
  width: 40px;
  transform:rotate(-15deg);
}

.product__price--new {
  font-size: 1rem;
  margin-bottom: 2px;

  span {
    font-size: 1.4rem;
    font-weight: 700;
  }
}

.variant-description {
  display: none;
}

.product-description p{
  margin: 0;
  font-size: 14px;
  line-height: 140%;
}

.product__add-to-cart {
  margin-top: 10px;
  width:60%;

  .button {
    width: 100%;
    padding: 20px 20px;
  }
}

.featured-product__entretien-wrapper {
  padding-top: 40px;
  display: flex;
  justify-content: flex-start;
}

.featured-product__entretien-picto-container {
  border-radius: 50%;
  width: 50px;
  height: 50px;
  background-color: #F4F2E5;
  position: relative;
  margin: auto;
  margin-bottom: 15px;
}

.featured-product__entretien-picto-img {
  position: absolute;
  width: 60%;
  height: auto;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.featured-product__entretien-text {
  padding-left: 20px;
  p {
    margin: 0;
    font-size: 14px;
  }
}

@media(min-width: 768px) {
  .product-gallery--media-thumbnail {
    max-width: 25%;
  }

  .product-details  {
    padding-left: 40px;
  }

  .product-description p{
    font-size: 16px;
  }

  .product__price-container {
    padding-top: 0;
  }

  .product__add-to-cart {
  }


  .featured-product__entretien-picto-container {
    margin: 0;
  }

  .featured-product__entretien-text {
    width: 60%;
    padding-left: 15px;
    text-align: left;
  }
}

