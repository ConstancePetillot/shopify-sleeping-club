/*==========================================
HEADER
============================================*/
.main-header {
  position: relative;
}

.logo {
  position: absolute;
  top: 70%;
  left: 10%;
}


/*==========================================
HERO HEADER
============================================*/


.slideshow__slide-title {
  width: 70%;
  margin: auto;
}




/*==========================================
REASSURANCE
============================================*/

.section-title {
  color: #F4F2E5;
  font-weight: bold;
}


/*==========================================
FEATURED-PRODUCT
============================================*/

.home-order-now .product-details h2 {
  font-size: 28px;
  font-weight: 600;
  margin-bottom: 15px;
}

.featured-product__description p {
  margin: 0;
  line-height: 140%;
}


.product__price--old {
  text-transform: uppercase;
  text-decoration: line-through #FCC0B5 ;
  font-size: 1.4rem;
  margin-top: 6px;
  font-weight: 600;
}

.product__price--new {
  font-size: 1rem;
  margin-bottom: 2px;

  span {
    font-size: 1.4rem;
    font-weight: 600;
  }
}

.product-description p{
  margin: 0;
  font-size: 16px;
  line-height: 140%;
}

.product-gallery--navigation {
  width: 800px;
}

.featured-product__entretien-wraper {
  display: flex;
  padding-left: 40px;
  align-items: center;
}

.featured-product__entretien-picto-container {
  border-radius: 50%;
  width: 50px;
  height: 50px;
  background-color: #F4F2E5;
  position: relative;
}

.featured-product__entretien-picto-img {
  position: absolute;
  width: 60%;
  height: auto;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.featured-product__entretien-text {
  width: 60%;
  padding-left: 15px;

  p {
    margin: 0;
  }
}


/*==========================================
LEFT-RIGHT
============================================*/

.left-right__feature-title {
  text-align: left;
  margin-bottom: 20px;
  font-weight: bold;
  font-size: 2rem;
  color: #A2C5FD;
}

.left-right__feature-title:first-child {
  color: #FCC0B5;
}



.left-right__feature-text p {
  text-align: left;

}
