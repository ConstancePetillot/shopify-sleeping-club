/*==========================================
TESTIMONIAL
============================================*/

.testimonial {
  background-color: #A2C5FD !important;
  position: relative;
  transform: translateY(-10px);
  z-index: 3;

}

.testimonial__wraper {
  position: relative;
  overflow: hidden;
}

.testimonial__left-encart {
  position: relative;
}

.testimonial__image-circle {
  display: none;
}

.testimonial__right-encart {
  display: block;
}

.testimonial__quote {
  width: 80%;
  padding-bottom: 10%;
  margin: auto;
  text-align: left;

  p {
    color: white;
    font-size: 16px;
    line-height: 140%;

    strong {
      color: black;
      font-weight: 500;
    }
  }
}

.testimonial__image--2 img{
    width: 100%;
}


.testimonial__image--arrow {
  position: absolute;
  top: 60%;
  right: 5%;
}


@media(min-width: 768px) {
  .testimonial__wraper {
    display: flex;
    justify-content: space-between;
    padding-left: 10%;
  }

  .testimonial__left-encart {
    margin: 5% 0 5% 0%;

  }

  .testimonial__image--left img{
    height: 80vh;
  }

  .testimonial__right-encart {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-end;
    padding-left: 25px;
    width: 80%;
    position: absolute;
    right: 0;
    bottom: -2%;
    width: 45%;
}

.testimonial__quote {
  width: 70%;
}

.testimonial__image--2 {
    width: 100%;
}
}

.testimonial__image--arrow {
  top: 35%;
}

@media(min-width: 1020px) {
  .testimonial__wraper {
    padding-left: 15%;
  }

  .testimonial__left-encart {
    margin: 10% 0 10% 0;
  }

  .testimonial__image--left img{
    height: 100vh;
  }

  .testimonial__right-encart {
    position: absolute;
    right: 0;
    bottom: -2%;
    width: 45%;
  }

  .testimonial__animated-circle {
    position: absolute;
    width: 50%;
    top: -10%;
    right: -25%;
  }

  .testimonial__image-circle {
    display: block;
    animation-iteration-count : infinite;
    animation-duration: 40000ms;
    animation-timing-function: linear;
    animation-name: spin;
  }
  @keyframes spin {
    from {
      transform: rotate(0deg);
    }

    to {
      transform: rotate(360deg);
    }
  }

  .testimonial__quote {
    width: 40%;
    padding-bottom: 2%;
  }

  .testimonial__image--arrow {
    top: 30%;
  }
}

@media(min-width: 1100px) {

  .testimonial__animated-circle {
    width: 60%;
    right: -25%;
  }

  .testimonial__image--arrow {
    top: 40%;
  }
}

