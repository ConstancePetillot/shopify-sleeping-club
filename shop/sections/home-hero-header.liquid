<section id="section-{{ section.id }}" class="hero-header section module-container {{ section.settings.style }}" data-section-id="{{ section.id }}" data-section-type="alternate__section">
  <div class="hero-header__wrapper">

    {% assign has_content = true %}
    {% if
      section.settings.title == blank and
      section.settings.subtitle == blank and
      section.settings.caption == blank and
      section.settings.button == blank %}
      {% assign has_content = false %}
    {% endif %}

    {% if section.settings.link != blank %}
      <div class="hero__video-container">
        <video class="hero__video" loop="" muted="" autoplay="autoplay" preload="" id="vid">
          <source src="https://cdn.shopify.com/s/files/1/0450/8588/4571/files/SLEEPINGCLUB_IMERSIVE_V02.mp4?v=1596635702.mp4" type="video/mp4">
        </video>
      </div>
    {% endif %}


    {% if has_content %}
      <div class="hero-text">
        {% if section.settings.title != blank %}
          <h1 class="hero-title slideshow__hero-title">{{ section.settings.title | escape }}</h1>
        {% endif %}

        {% if section.settings.subtitle != blank %}
          <h2 class="hero-subtitle">{{ section.settings.subtitle | escape }}</h2>
        {% endif %}

        {% if section.settings.caption != blank %}
          <div class="hero-caption">
            {{ section.settings.caption }}
          </div>
        {% endif %}

        {% if section.settings.button != blank and section.settings.link != blank %}
          <a class="hero-button button-black" href="{{ section.settings.link }}">
            {{ section.settings.button | escape }}
          </a>
        {% endif %}
      </div>
    {% endif %}

  </div>
</section>

